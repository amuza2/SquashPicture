<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ═══════════════════════════════════════════════════════════════════════
         NEUMORPHISM CHECKBOX STYLES
         Soft toggle with inset/outset shadow states
         ═══════════════════════════════════════════════════════════════════════ -->
    
    <!-- Neumorphism CheckBox Style -->
    <ControlTheme x:Key="ModernCheckBox" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="12,0,0,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="Transparent" Padding="{TemplateBinding Padding}">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border x:Name="CheckBorder"
                                Width="24"
                                Height="24"
                                CornerRadius="8"
                                Background="{StaticResource NeuroSurfaceBrush}"
                                BorderThickness="0"
                                BoxShadow="inset 2 2 5 0 #1a1a24, inset -2 -2 5 0 #40404f">
                            <Panel>
                                <Path x:Name="CheckMark"
                                      Width="12"
                                      Height="12"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Data="M 1.5 5 L 4.5 8 L 10.5 2"
                                      Stroke="{StaticResource AccentPrimaryBrush}"
                                      StrokeThickness="2.5"
                                      StrokeLineCap="Round"
                                      IsVisible="False"/>
                            </Panel>
                        </Border>
                        <ContentPresenter Grid.Column="1"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^:checked /template/ Border#CheckBorder">
            <Setter Property="BoxShadow" Value="3 3 6 0 #1a1a24, -3 -3 6 0 #40404f"/>
        </Style>
        
        <Style Selector="^:checked /template/ Path#CheckMark">
            <Setter Property="IsVisible" Value="True"/>
        </Style>
        
        <Style Selector="^:pointerover /template/ Border#CheckBorder">
            <Setter Property="Background" Value="{StaticResource NeuroSurfaceLightBrush}"/>
        </Style>
        
        <Style Selector="^:disabled">
            <Setter Property="Opacity" Value="0.5"/>
        </Style>
    </ControlTheme>
    
</ResourceDictionary>
