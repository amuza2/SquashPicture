<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ═══════════════════════════════════════════════════════════════════════
         NEUMORPHISM TEXT STYLES
         Soft, readable typography with subtle color hierarchy
         ═══════════════════════════════════════════════════════════════════════ -->
    
    <!-- Heading Styles -->
    <Style Selector="TextBlock.h1">
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="LetterSpacing" Value="0.5"/>
    </Style>
    
    <Style Selector="TextBlock.h2">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>
    
    <Style Selector="TextBlock.h3">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>
    
    <!-- Body Text Styles -->
    <Style Selector="TextBlock.body">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="LineHeight" Value="22"/>
    </Style>
    
    <Style Selector="TextBlock.body-secondary">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
        <Setter Property="LineHeight" Value="22"/>
    </Style>
    
    <Style Selector="TextBlock.caption">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}"/>
    </Style>
    
    <!-- Label Style -->
    <Style Selector="TextBlock.label">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
        <Setter Property="LetterSpacing" Value="1"/>
    </Style>
    
    <!-- Monospace Style -->
    <Style Selector="TextBlock.mono">
        <Setter Property="FontFamily" Value="Consolas, Monaco, monospace"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{DynamicResource AccentSecondaryBrush}"/>
    </Style>
    
    <!-- Status Icon Style -->
    <Style Selector="TextBlock.status-icon">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- Placeholder Style -->
    <Style Selector="TextBlock.placeholder">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- Accent Text Style -->
    <Style Selector="TextBlock.accent">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{DynamicResource AccentPrimaryBrush}"/>
    </Style>
    
</Styles>
