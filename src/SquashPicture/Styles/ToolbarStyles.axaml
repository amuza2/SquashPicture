<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ═══════════════════════════════════════════════════════════════════════
         NEUMORPHISM TOOLBAR STYLES
         Soft container with subtle depth
         ═══════════════════════════════════════════════════════════════════════ -->
    
    <!-- Neumorphism Toolbar Container Style -->
    <Style Selector="Border.toolbar">
        <Setter Property="Background" Value="{DynamicResource NeuroBackgroundBrush}"/>
        <Setter Property="Padding" Value="20,16"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="0,0,20,20"/>
        <Setter Property="BoxShadow" Value="0 4 12 0 #1a1a24"/>
    </Style>
    
    <!-- Toolbar Button Group -->
    <Style Selector="StackPanel.button-group">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Spacing" Value="12"/>
    </Style>
    
    <!-- Neumorphism Separator Style -->
    <Style Selector="Separator">
        <Setter Property="Background" Value="{DynamicResource BorderDefaultBrush}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0,12"/>
        <Setter Property="Opacity" Value="0.5"/>
    </Style>
    
</Styles>
